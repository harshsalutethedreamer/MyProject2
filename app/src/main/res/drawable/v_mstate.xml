<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="true" >
    <bitmap
        android:tint="@color/maintheme_100"
        android:src="@drawable/ic_more_vert_black_24dp"/>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
    <bitmap
        android:tint="@color/maintheme_100"
        android:src="@drawable/ic_more_vert_black_24dp"/>
    </item>
    <item android:state_focused="true" android:drawable="@drawable/ic_more_vert_black_24dp">
        <bitmap
            android:tint="@color/maintheme_100"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:alpha="0.8"/>
    </item>
    <item android:state_focused="false" android:state_pressed="false" android:drawable="@drawable/ic_more_vert_black_24dp"/>
</selector>