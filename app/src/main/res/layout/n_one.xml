<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/categorybox"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/maintheme"
            android:transitionName="@string/transition_name"
            >

            <LinearLayout
                android:id="@+id/insidebox"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rectangle_white"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                >

                <TextView
                    android:id="@+id/first_alphabet_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="#000000"
                    android:textSize="75sp"
                    android:fontFamily="sans-serif"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/ncreatedate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14 OCT 2010"
                            android:textColor="#757575"
                            android:textSize="15sp"
                            />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end|right"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:id="@+id/favourite_button"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_star_border_black_24dp"
                                />

                            <ImageView
                                android:id="@+id/more_options"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/v_mstate"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/remaining_text_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="ntiques"
                        android:textColor="#000000"
                        android:textSize="36sp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/relative_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/insidebox"
                android:layout_marginTop="1dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CO"
                        android:textColor="#111111"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="UNT"
                        android:textColor="#111111"
                        android:textSize="12sp"
                        android:layout_marginLeft="1dp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/display_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="monospace"
                    android:text="786"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        >

                        <ImageView
                            android:id="@+id/plus_button_add"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_plus"
                            android:background="@drawable/ripple"
                            android:clickable="true"
                            />

                        <ImageView
                            android:id="@+id/minus_button"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_minus"
                            android:background="@drawable/ripple"
                            android:clickable="true"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>